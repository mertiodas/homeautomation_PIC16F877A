QMainWindow {
    background-color: #E6F3F7; 
}

QGroupBox {
    background-color: rgba(255, 255, 255, 0.7); 
    border: 1px solid #99CCFF;
    border-radius: 12px;
    margin-top: 10px;
    font: 12pt &quot;Segoe UI&quot;;
    color: #004D66; 
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 10px;
    background-color: #99CCFF; 
    color: #FFFFFF; 
    border-radius: 4px;
}

QPushButton {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                     stop: 0 #77DD77, 
                                     stop: 1 #4CAF50); 
    color: white;
    font: 10pt &quot;Segoe UI Semibold&quot;;
    border: 1px solid #388E3C;
    border-radius: 8px;
    padding: 8px 15px;
}

QPushButton:hover {
    background-color: #82E0AA;
}

QPushButton:pressed {
    background-color: #388E3C;
}

QLineEdit {
    background-color: white;
    border: 1px solid #0099CC; 
    border-radius: 5px;
    padding: 4px;
    font: 11pt &quot;Segoe UI&quot;;
}
QLabel {
    font-family: &quot;Segoe UI&quot;, Helvetica, Arial, sans-serif;
    color: #004D66; 
    padding: 3px; 
    background-color: transparent;
}
/* Style for key values like 29.5 °C */
QLabel[class=&quot;ValueLabel&quot;] {
    /* Highly legible, bold digital font style */
    font-family: &quot;Segoe UI Black&quot;, &quot;Segoe UI Semibold&quot;, Arial, sans-serif;
    font-weight: 800; /* Extra bold */
    
    /* Aquatic blue/cyan color */
    color: #0088CC; 
    
    /* Text shadow creates the signature soft glow and depth */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3), 
                 0 0 10px rgba(0, 150, 200, 0.7); 
    
    /* You will manually set font-size: 24pt (or similar) on this element */
    padding: 5px;
}
